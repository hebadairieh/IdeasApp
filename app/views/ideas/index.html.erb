<div class="jumbotron">
  <div class="container">
    <div class="row well well-lg">
      <div class="col-md-8 col-md-offset-2">
         <h1>Share you idea Now!</h1>
         <p>You can also check our latest ideas ! Enjoy <i class="fa fa-angellist"></i></p>
      <div class="col-md-offset-4">
         <%= link_to 'Submit you idea!', new_idea_path, :class => "btn btn-success btn-lg" %>
      </div>
      </div>

    </div>
  </div>
</div>



<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <%= image_tag idea.picture_url(:thumb2) if idea.picture.present?%>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>

<%= link_to 'New Idea', new_idea_path %>
